compose() {
    while read -r line; do
        case $line in
            # D*)
            #     desktop="${line#?}"
            #     ;;
            T*)
                title="${line#?}"
                ;;
            # M*)
            #     music="${line#?}"
            #     ;;
            # W*)
            #     wifi="${line#?}"
            #     ;;
            C*)
                clock="${line#?}"
                ;;
        esac
        # echo "%{+o}%{+u}%{O+2}${desktop}%{r}${clock}%{O+2}%{c}${title}%{-u}%{-o}"
        echo "%{O+2}${title}%{r}${clock}%{O+2}"
    done
}

# desktops    > "$LEMONBAR_FIFO" &
title       > "$LEMONBAR_FIFO" &
# music       > "$LEMONBAR_FIFO" &
# wifi        > "$LEMONBAR_FIFO" &
dateTime    > "$LEMONBAR_FIFO" &

cat "$LEMONBAR_FIFO" | compose | lemonbar -b -g "1366x18+0+0" -B "$C1" -F "$C2" -U "$C2" -u 2 -f "-*-fixed-medium-r-*-*-12-*-*-*-*-*-iso10646-*" LVDS-0
