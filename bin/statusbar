# wifi() {
#     while true; do
#         IW=$(/usr/sbin/iw wlp6s0 link)
#         WIFI_SSID=$(echo "$IW" | grep 'SSID' | sed 's/SSID: //' | sed 's/\t//')
#         if [ "$WIFI_SSID" != "" ]; then
