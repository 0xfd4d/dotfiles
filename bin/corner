#!/bin/sh

# default values for gaps and master area
PANEL=${PANEL:-24}
GAP=${GAP:-0}

PFW=${2:-$(pfw)}
BW=$(wattr b $PFW)

ROOT=$(lsw -r)
SW=$(wattr w $ROOT)
SH=$(wattr h $ROOT)
SH=$((SH - PANEL))

# calculate usable screen size (without borders and gaps)
W=$(wattr w $PFW)
H=$(wattr h $PFW)

X=$GAP
Y=$GAP

case $1 in
    tr) X=$((SW - W - BW*2 - GAP)) ;;
    bl) Y=$((SH - H - BW*2 - GAP)) ;;
    br) X=$((SW - W - BW*2 - GAP))
        Y=$((SH - H - BW*2 - GAP)) ;;
    md) X=$((SW/2 - W/2 - BW))
        Y=$((SH/2 - H/2 - BW));;
esac

wtp $X $Y $W $H $PFW
