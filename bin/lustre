#!/bin/sh
#
# z3bra - 2015 (c) wtfpl
# make the current window "rainbowish"... Awesome idea from xero@nixers.net !

FREQ=${FREQ:-0.075}
COLORS="B9B9B9 B3B3B3 ADADAD A8A8A8 A2A2A2 9D9D9D 979797 929292 8C8C8C 878787 818181 7C7C7C 767676 717171 6B6B6B 666666 606060 5A5A5A 555555 4F4F4F 4A4A4A 444444 3F3F3F 393939 343434 2E2E2E 292929 232323 1E1E1E 181818 131313 0D0D0D 080808 080808 0D0D0D 131313 181818 1E1E1E 232323 292929 2E2E2E 343434 393939 3F3F3F 444444 4A4A4A 4F4F4F 555555 5A5A5A 606060 666666 6B6B6B 717171 767676 7C7C7C 818181 878787 8C8C8C 929292 979797 9D9D9D A2A2A2 A8A8A8 ADADAD B3B3B3 B9B9B9"
CUR=$(pfw)

while :; do
    for c in $COLORS; do
        chwb -c $c $(pfw) 
        sleep $FREQ
    done
done
