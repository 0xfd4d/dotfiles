#!/bin/sh

color0="$(xrdb -query | grep color0: | awk '{print $2}')"
color4="$(xrdb -query | grep color4: | awk '{print $2}')"
colorbg="$(xrdb -query | grep background: | awk '{print $2}')"
colorfg="$(xrdb -query | grep foreground: | awk '{print $2}')"

rofi \
    -bw 2 \
    -color-active "$colorbg, $colorfg, $colorbg, $colorfg, $colorbg" \
    -color-normal "$colorbg, $colorfg, $colorbg, $colorfg, $colorbg" \
    -color-urgent "$colorbg, $color4,  $colorbg, $color4,  $colorbg" \
    -color-window "$colorbg, $color0,  $color0" \
    -font "Misc Fixed Bold 13px" \
    -hide-scrollbar \
    -modi run,drun,window -show run \
    -separator-style none \
    -width 45 \
    "$@"
