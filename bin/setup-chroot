#!/bin/bash

start() {
    sudo -s -- <<EOF
mount --bind /sys /storage/arch/sys
mount --bind /dev /storage/arch/dev
mount --bind /dev/shm /storage/arch/dev/shm
mount --bind /proc /storage/arch/proc
mount --bind /run /storage/arch/run
EOF
}

stop() {
    sudo -s -- <<EOF
umount /storage/arch/sys -l
umount /storage/arch/dev -l
umount /storage/arch/dev/shm -l
umount /storage/arch/proc -l
umount /storage/arch/run -l
EOF
}

test() {
    VAR=`cat <<EOF
echo test
EOF`
echo $VAR
}

$@
