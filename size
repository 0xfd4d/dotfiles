panel=24
ga=2
rw=$(lsw -r)
sw=$(wattr w $rw)
sh=$(wattr h $rw)

gaps=$((ga * 2))
width=$((sw - gaps))
height=$((sh - gaps - panel))

wsize() {
    case $1 in
        w) width=$((width - ga - 1)) && test `wattr w $2` -ge $width && echo $width || echo `wattr w $2` ;;
        h) heigth=$((heigth - ga - 1)) && test `wattr h $2` -ge $height && echo $height || echo `wattr h $2` ;;
    esac
}
