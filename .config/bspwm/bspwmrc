#!/bin/sh

bspc config border_width 3
bspc config window_gap 15

bspc config top_padding 27

bspc config focused_border_color "$(xrdb -query | grep "color7" | awk '{print $2}')"
bspc config normal_border_color "$(xrdb -query | grep "background" | awk '{print $2}')"

bspc config presel_feedback_color \#5f5a60

bspc config click_to_focus true
bspc config focus_follows_pointer true

bspc config single_monocle true
bspc config borderless_monocle true
bspc config gapless_monocle false

bspc config honor_size_hints true

bspc monitor -d α β γ δ ε ϛ ζ η θ ι

bspc rule -a "Firefox:Navigator" desktop=^1 follow=on
bspc rule -a "chromium" desktop=^1 follow=on

bspc rule -a Subl3 desktop=^3 follow=on
bspc rule -a Sublime_text desktop=^3 follow=on
bspc rule -a Bless desktop=^3 state=tiled follow=on

bspc rule -a Filezilla desktop=^4 follow=on
bspc rule -a Zathura desktop=^4 state=tiled follow=on
bspc rule -a Pcmanfm desktop=^4 follow=on

bspc rule -a feh desktop=^5 follow=on
bspc rule -a mpv desktop=^5 follow=on

bspc rule -a Ghetto\ Skype desktop=^6 follow=on

bspc rule -a qemu-system-x86_64 desktop=^7 state=pseudo_tiled follow=on

bspc rule -a Gimp desktop=^8 follow=on
bspc rule -a MyPaint desktop=^8 follow=on
bspc rule -a Inkscape desktop=^8 follow=on

