#!/bin/sh

bspc config border_width 2
bspc config window_gap 4

bspc config split_ratio 0.55

bspc config focused_border_color "$(xrdb -query | grep "color7" | awk '{print $2}')"
bspc config normal_border_color "$(xrdb -query | grep "color0" | awk '{print $2}')"

bspc config presel_feedback_color "$(xrdb -query | grep "color7" | awk '{print $2}')"

bspc config click_to_focus true
bspc config focus_follows_pointer true

bspc config borderless_monocle true
bspc config gapless_monocle true
bspc config single_monocle true

bspc config honor_size_hints false

bspc monitor -d 1 2 3 4 5 6 7 8 9

bspc rule -a "Chromium" desktop=^1 follow=on
bspc rule -a "Firefox:Navigator" desktop=^1 follow=on
bspc rule -a "Pale moon:Navigator" desktop=^1 follow=on

bspc rule -a "*:libreoffice" desktop=^3 follow=on
bspc rule -a Atom desktop=^3 follow=on
bspc rule -a Bless desktop=^3 state=tiled follow=on
bspc rule -a DesktopEditors desktop=^3 follow=on
bspc rule -a Subl3 desktop=^3 follow=on
bspc rule -a Sublime_text desktop=^3 follow=on
bspc rule -a Filezilla desktop=^3 follow=on
bspc rule -a Pcmanfm desktop=^3 follow=on
bspc rule -a Nautilus desktop=^3 follow=on
bspc rule -a Zathura desktop=^3 state=tiled follow=on

bspc rule -a Sxiv desktop=^4 follow=on
bspc rule -a feh desktop=^4 follow=on
bspc rule -a mpv desktop=^4 follow=on

bspc rule -a Ghetto\ Skype desktop=^5 follow=on
bspc rule -a Pidgin desktop=^5 follow=off

bspc rule -a Gimp desktop=^6 follow=on
bspc rule -a Inkscape desktop=^6 follow=on
bspc rule -a MyPaint desktop=^6 follow=on
bspc rule -a krita desktop=^6 follow=on

bspc rule -a Steam desktop=^7 follow=on

bspc rule -a "*:qemu-system-x86_64" desktop=^7 follow=on state=pseudo_tiled

bspc desktop -f ^2 && urxvt -e tmux a
