#!/bin/sh

# row height - 14
# internal border size - 4
# 3 + 4 = 7 * 2 = 14
bspc config border_width 4
bspc config window_gap 14

# +1px on each border side
bspc config top_padding 26 # 26 / 2 = 13

bspc config focused_border_color \#a7a7a7
bspc config normal_border_color \#5f5a60

bspc config presel_feedback_color \#5f5a60

bspc config click_to_focus true
bspc config focus_follows_pointer true

bspc config single_monocle true
bspc config borderless_monocle true
bspc config gapless_monocle true

bspc monitor -d      

bspc rule -a "Firefox:Navigator" desktop=^1 follow=on
bspc rule -a "chromium" desktop=^1 follow=on

bspc rule -a Zathura desktop=^3 state=tiled follow=on

bspc rule -a feh desktop=^4 follow=on
bspc rule -a mpv desktop=^4 follow=on

bspc rule -a qemu-system-x86_64 desktop=^5 state=pseudo_tiled follow=on

bspc rule -a Gimp desktop=^6 follow=on
