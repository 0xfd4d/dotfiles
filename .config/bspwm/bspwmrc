#!/bin/sh

# row height - 14
# internal border size - 4
# 3 + 4 = 7 * 2 = 14
bspc config border_width 3
bspc config window_gap 14

# +1px on each border side
bspc config top_padding 26 # 26 / 2 = 13

bspc config focused_border_color \#acacaf
bspc config normal_border_color \#040405

bspc config presel_feedback_color \#acacaf

bspc config click_to_focus true
bspc config focus_follows_pointer true

bspc monitor -d         

bspc rule -a Firefox desktop=^1 follow=on border=off

bspc config -d ^1 window_gap 0

bspc rule -a Zathura desktop=^6 state=tiled follow=on

bspc rule -a feh desktop=^7 follow=on
bspc rule -a mpv desktop=^7 follow=on

bspc rule -a Gimp desktop=^9 follow=on

