#!/bin/sh

bspc config border_width 6
bspc config window_gap 20

bspc config top_padding 26

bspc config focused_border_color \#22222E
bspc config normal_border_color \#040405

bspc config presel_feedback_color \#22222E

bspc config split_ratio 0.5
bspc config click_to_focus true
bspc config focus_follows_pointer true

bspc monitor -d         

bspc rule -a Firefox desktop= follow=on

bspc rule -a Zathura desktop= state=tiled follow=on

bspc rule -a feh desktop= follow=on
bspc rule -a mpv desktop= follow=on

bspc rule -a Gimp desktop= follow=on

